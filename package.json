{
  "name": "@digicatapult/sqnc-hyproof-api",
  "version": "0.13.16",
  "description": "An OpenAPI API service for SQNC",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "lint": "eslint .",
    "depcheck": "depcheck",
    "build:tsoa": "tsoa spec-and-routes",
    "build": "tsoa spec-and-routes && tsc",
    "start": "node build/index.js",
    "start:persona:01": "API_SWAGGER_BG_COLOR='#e4f2f3' API_SWAGGER_TITLE=API-Heidi    API_SWAGGER_HEADING=API-Heidi     node build/index.js",
    "start:persona:02": "API_SWAGGER_BG_COLOR='#e7f6e6' API_SWAGGER_TITLE=API-Emma     API_SWAGGER_HEADING=API-Emma      node build/index.js",
    "start:persona:03": "API_SWAGGER_BG_COLOR='#f8dddd' API_SWAGGER_TITLE=API-Reginald API_SWAGGER_HEADING=API-Reginald  node build/index.js",
    "dev": "concurrently \"NODE_ENV=dev nodemon | pino-colada\" \"nodemon -x tsoa spec-and-routes --ignore src/routes.ts --ignore src/swagger.json\"",
    "test:offchain": "NODE_ENV=test ./node_modules/.bin/mocha --config ./test/mocharc.json ./test/integration/offchain/*.test.ts",
    "test:onchain": "NODE_ENV=test ./node_modules/.bin/mocha --config ./test/mocharc.json ./test/integration/onchain/*.test.ts",
    "test:unit": "NODE_ENV=test ./node_modules/.bin/mocha --config ./test/mocharc.json ./src/**/*.test.ts",
    "db:cmd": "node --import=tsimp/import ./node_modules/.bin/knex",
    "db:migrate": "npm run db:cmd -- migrate:latest --knexfile src/lib/db/knexfile.ts",
    "db:rollback": "npm run db:cmd -- migrate:rollback --knexfile src/lib/db/knexfile.ts",
    "flows": "npx @digicatapult/sqnc-process-management@latest create -h localhost -p 9944 -u //Alice -f ./processFlows.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digicatapult/sqnc-hyproof-api.git"
  },
  "engines": {
    "node": "20.x.x",
    "npm": "10.x.x"
  },
  "keywords": [
    "OpenAPI"
  ],
  "author": "Digital Catapult",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/digicatapult/sqnc-hyproof-api/issues"
  },
  "homepage": "https://github.com/digicatapult/sqnc-hyproof-api#readme",
  "devDependencies": {
    "@polkadot/types": "^10.12.6",
    "@types/chai": "^4.3.14",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.12.5",
    "@types/pino": "^7.0.5",
    "@types/sinon": "^17.0.3",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "chai": "^5.1.0",
    "concurrently": "^8.2.2",
    "depcheck": "^1.4.7",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "mocha": "^10.4.0",
    "nodemon": "^3.1.0",
    "pino-colada": "^2.2.2",
    "prettier": "^3.2.5",
    "reflect-metadata": "^0.2.1",
    "sinon": "^17.0.1",
    "supertest": "^6.3.4",
    "ts-node": "^10.9.2",
    "tsimp": "^2.0.11",
    "typescript": "^5.4.4",
    "undici": "^6.11.1"
  },
  "dependencies": {
    "@polkadot/api": "^10.12.6",
    "@polkadot/util-crypto": "^12.6.2",
    "@tsoa/runtime": "^6.2.0",
    "base-x": "^4.0.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "envalid": "^8.0.0",
    "express": "^4.19.2",
    "knex": "^3.1.0",
    "moment": "^2.30.1",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.5",
    "pino": "^8.19.0",
    "reflect-metadata": "^0.2.1",
    "swagger-ui-express": "^5.0.0",
    "tsoa": "^6.2.0",
    "tsyringe": "^4.8.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  }
}
